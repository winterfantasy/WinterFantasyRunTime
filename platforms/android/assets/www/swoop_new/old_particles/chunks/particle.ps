// FRAGMENT SHADER INPUTS: VARYINGS
varying vec2 vUv0;
varying float vAge;
varying vec4 vColor;

// FRAGMENT SHADER INPUTS: UNIFORMS
uniform sampler2D texture_colorMap;
uniform sampler2D texture_opacityMap;
uniform sampler2D texture_rampMap;

void main(void)
{
    vec4 colorMult = texture2D(texture_rampMap, vec2(vAge, 0.5)) * vColor;
    vec3 rgb = texture2D(texture_colorMap, vUv0).rgb;
    float a = texture2D(texture_opacityMap, vUv0).r;
    gl_FragColor = vec4(rgb, a) * colorMult;
}
